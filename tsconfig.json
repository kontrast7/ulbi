{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@ui": ["src/shared/ui"],
      "@lib": ["src/shared/lib"],
      "@config": ["src/shared/config"],
      "@assets/*": ["public/assets/*"],
      "@widgets": ["src/widgets"],
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"]
    }
  },
  "include": ["global.d.ts", "**/*.ts", "**/*.tsx", "./jest-setup.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
